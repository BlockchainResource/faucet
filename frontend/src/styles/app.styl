flex-version = flex
support-for-ie = false
vendor-prefixes = official
@require '../../node_modules/nib/index.styl'
@require 'variables'
@require 'vendor/*'

global-reset()
reset-html5()

*
  box-sizing border-box

html, body, #app
  background var(--app-fg)

a
  color var(--link)
  text-decoration none

  &:hover
    color var(--hover)

#app
  df()
  color var(--txt)

.ni-field
  border-radius 2px!important
